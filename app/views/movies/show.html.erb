
<h1><%= @movie.title %></h1>
<p> Created in: <%= @movie.creation_year %> </p>
<p> Genre: <%= @movie.genre %> </p>
<h3>Actors in this movie:<% @actors.each do |actor| %></h3>
  <p><%= actor.name %></p>
<% end %>
<p>Average age of Movie Actors: <%= @average %></p>
<h3>Add actor to this movie:</h3>
<%= form_with url: '/movies/:id', method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.submit "Add Actor" %>
<% end %>
